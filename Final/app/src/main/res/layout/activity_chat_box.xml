<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat_Box">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat_history"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:paddingTop='40dp'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_enter_message"
            />

        <EditText
            android:id="@+id/et_enter_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="41dp"
            app:layout_constraintTop_toBottomOf="@id/rv_chat_history"
            app:layout_constraintStart_toEndOf="@+id/bt_send_message"
            android:autofillHints="Send Message" />

        <ImageButton
            android:id="@+id/bt_send_message"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:backgroundTint="#4CAFE0"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@id/et_enter_message"
            app:layout_constraintTop_toBottomOf="@id/rv_chat_history"
            app:srcCompat="@drawable/ic_send_message" />

<!--        <Button-->
<!--            android:id="@+id/bt_send_message"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:drawableLeft="@drawable/ic_send_message"-->
<!--            android:gravity="start|left|center_vertical"-->
<!--            android:textColor="@color/black"-->
